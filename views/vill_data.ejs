<!-- including header -->
<%- include ('./partials/header.ejs') %>
    <!-- here we can put our other link element -->

    <!-- including navbar -->
    <%- include('./partials/navbar.ejs') %>

        <div class="container">
            <div class="row">
                <div class=" col-sm-5 mt-4">
                    <h3 class="text-center alert alert-success">Add new data</h3>
                    <form method="post">
                        <div class="mb-3">
                            <label for="village" class="form-label">Village</label>
                            <input type="text" class="form-control" id="village" name="village" />
                        </div>
                        <div class="mb-3">
                            <label for="district" class="form-label">District</label>
                            <input type="text" class="form-control" id="district" name="district" />
                        </div>
                        <div class="mb-3">
                            <label for="post" class="form-label">Post</label>
                            <input type="text" class="form-control" id="post" name="post" />
                        </div>
                        <div class="mb-3">
                            <label for="code" class="form-label">Postal code</label>
                            <input type="number" class="form-control" min="111165" id="code" name="code" />
                        </div>
                        <button type="submit" class="btn btn-primary">Create</button>
                    </form>
                </div>
                <div class=" col-sm-6 mt-4">
                    <h3 class="text-center alert alert-dark">List of villages</h3>
                    <table class="table table-striped table-hover ">
                        <thead>
                            <tr>
                                <th scope="col">No</th>
                                <th scope="col">Village</th>
                                <th scope="col">District</th>
                                <th scope="col">Post</th>
                                <th scope="col">Postal code</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- here we nesting a loop for data insertion -->
                            <% var i=1 %>
                                <% data.forEach((item)=>{ %>
                                    <!-- item contain a array of obj-->
                                    <tr>
                                        <td scope="row">
                                            <%= i++ %>
                                        </td>
                                        <td>
                                            <%=item.village %>
                                        </td>
                                        <td>
                                            <%=item.district %>
                                        </td>
                                        <td>
                                            <%=item.post %>
                                        </td>
                                        <td>
                                            <%=item.code %>
                                        </td>
                                        <td>
                                            <form action="/village/edit/<%= item._id %>" method="get" class="d-inline">
                                                <button type="submit" class="btn">
                                                    <i class="fa-solid fa-square-pen text-warning"></i>
                                                </button>
                                            </form>
                                            <form action="/village/delete/<%=item.id %>" method="post" class="d-inline">
                                                <button type="submit" class="btn">
                                                    <i class="fa-solid fa-trash text-danger"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                    <% }) %>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- here we can put script link -->


        <!-- including footer -->
        <%- include ('./partials/footer.ejs') %>